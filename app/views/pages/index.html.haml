#content

  %h1 Listing pages

  %table
    %thead
      %tr
        %th Name
        %th Content
        %th Slug
        %th Title
        %th Subtitle
        %th
        %th
        %th

    %tbody
      - @pages.each do |page|
        %tr
          %td= page.name
          %td= page.content
          %td= page.slug
          %td= page.title
          %td= page.subtitle
          %td= link_to 'Show', page
          %td= link_to 'Edit', edit_page_path(page)
          %td= link_to 'Destroy', page, :method => :delete, :data => { :confirm => 'Are you sure?' }

  %br

  = link_to 'New Page', new_page_path
